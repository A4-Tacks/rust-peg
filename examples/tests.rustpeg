use std::collections::HashMap;

#[export]
consonants
	= ([a-z]![aeiou])+

#[export]
options -> Option<()>
	= "abc" v:"def"? {v}

number -> int
	= [0-9]+ { from_str::<int>(match_str).unwrap() }

#[export]
list -> Vec<int>
	= number ** ","

digit -> int
	= [0-9] { from_str::<int>(match_str).unwrap() }

#[export]
repeat_n -> Vec<int>
	= digit{4}

#[export]
repeat_min -> Vec<int>
	= digit{2,}

#[export]
repeat_max -> Vec<int>
	= digit{,2}

#[export]
repeat_min_max -> Vec<int>
	= digit{2,3}

#[export]
boundaries -> String
	= "foo" { match_str.to_string() }

#[export]
borrowed -> &str
	= [a-z]+ { match_str }

#[export]
block -> &str
	= [a-z]+ {
		let result = match_str;
		result
	}

#[export]
keyvals -> HashMap<int, int>
    = kvs:keyval ++ "\n" {
        let mut rv = HashMap::new();
        for &(k, v) in kvs.iter() {
           rv.insert(k, v);
        };
        rv
    }

keyval -> (int, int)
    = k:number ":" + v:number { (k, v) }
